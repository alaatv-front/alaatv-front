{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recommended-vue"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "template",
          "script",
          "define-mixin",
          "mixin",
          "vue-custom-block"
        ]
      }
    ],
    "selector-class-pattern": null,
    "scss/double-slash-comment-whitespace-inside": null
  }
}
